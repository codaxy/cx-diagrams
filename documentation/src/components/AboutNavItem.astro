---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
const pathname = Astro.url.pathname;

// Check if this nav item is active (exact match for About page)
const normalizedPath = pathname.replace(/\/$/, '') || '/';
const isActive = normalizedPath === '' || normalizedPath === '/';
---

<a
  href={href}
  class:list={[
    "hover:bg-gray-100 flex items-center px-3 py-3 text-gray-800 relative font-semibold whitespace-nowrap text-opacity-70 text-[15px] border-l-[3px] border-transparent cursor-pointer",
    { "!bg-blue-100 !border-blue-500 !text-blue-500 !opacity-100": isActive }
  ]}
>
  <svg class="w-7 h-7 ml-3 mr-3 opacity-70" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
  </svg>
  <div class="flex-grow">{text}</div>
</a>
