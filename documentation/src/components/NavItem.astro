---
interface Props {
  href: string;
  text: string;
  icon?: 'component' | 'line' | 'example';
}

const { href, text, icon = 'component' } = Astro.props;
const pathname = Astro.url.pathname;

// Normalize paths for comparison (remove trailing slashes)
const normalizedHref = href.replace(/\/$/, '') || '/';
const normalizedPath = pathname.replace(/\/$/, '') || '/';

// Check if this nav item is active
const isActive = normalizedHref === '/'
  ? normalizedPath === '/'
  : normalizedPath === normalizedHref || normalizedPath.startsWith(normalizedHref + '/');
---

<a
  href={href}
  class:list={[
    "hover:bg-gray-100 flex items-center px-2 py-2 text-gray-800 relative font-medium whitespace-nowrap text-opacity-70 text-[14px] border-l-[3px] border-transparent cursor-pointer",
    { "!bg-blue-100 !border-blue-500 !text-blue-500 !opacity-100": isActive }
  ]}
>
  {icon === 'component' && (
    <svg class="w-4 h-4 ml-4 mr-3 opacity-60" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="m21 7.5-9-5.25L3 7.5m18 0-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" />
    </svg>
  )}
  {icon === 'line' && (
    <svg class="w-4 h-4 ml-4 mr-3 opacity-60" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21 3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
    </svg>
  )}
  {icon === 'example' && (
    <svg class="w-4 h-4 ml-4 mr-3 opacity-60" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904 9 18.75l-.813-2.846a4.5 4.5 0 0 0-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 0 0 3.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 0 0 3.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 0 0-3.09 3.09ZM18.259 8.715 18 9.75l-.259-1.035a3.375 3.375 0 0 0-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 0 0 2.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 0 0 2.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 0 0-2.456 2.456ZM16.894 20.567 16.5 21.75l-.394-1.183a2.25 2.25 0 0 0-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 0 0 1.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 0 0 1.423 1.423l1.183.394-1.183.394a2.25 2.25 0 0 0-1.423 1.423Z" />
    </svg>
  )}
  <div class="flex-grow">{text}</div>
</a>
